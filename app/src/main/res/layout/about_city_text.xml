<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    android:fillViewport="true">

    <LinearLayout style="@style/VerticalLinearLayout">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/city_image_height"
            android:layout_margin="@dimen/layout_margin_default"
            android:contentDescription="@string/indore_city_image"
            android:scaleType="fitXY"
            android:src="@drawable/indore" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_margin_default"
            android:text="@string/indore_city_details"
            android:textColor="@color/city_details_text_color"
            android:textSize="20sp" />

    </LinearLayout>

</ScrollView>
